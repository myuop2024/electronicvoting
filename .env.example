# ============================================================================
# ObserverNet Election Platform - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# For production deployment, see: .env.production.example
# ============================================================================

# ----------------------------------------------------------------------------
# Application Environment
# ----------------------------------------------------------------------------
NODE_ENV=development
ENVIRONMENT=development
APP_BASE_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# Database & Cache
# ----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/elections
REDIS_URL=redis://localhost:6379/0

# ----------------------------------------------------------------------------
# Session & Security
# ----------------------------------------------------------------------------
SESSION_SECRET=change-me-generate-with-openssl

# ----------------------------------------------------------------------------
# Hyperledger Fabric Blockchain
# ----------------------------------------------------------------------------
# Use "mock" for development, or specify peer address for production
FABRIC_GATEWAY_URL=mock
FABRIC_MSP_ID=Org1MSP
FABRIC_CHANNEL_NAME=election
FABRIC_CHAINCODE_NAME=ballot_cc
# Certificate paths (only needed if not using mock)
FABRIC_CERT_PATH=
FABRIC_KEY_PATH=
FABRIC_TLS_CA_CERT=

# ----------------------------------------------------------------------------
# Didit.me Identity Verification
# ----------------------------------------------------------------------------
DIDIT_API_KEY=
DIDIT_CLIENT_ID=
DIDIT_CLIENT_SECRET=
DIDIT_WEBHOOK_SECRET=

# ----------------------------------------------------------------------------
# Email Provider (mock, ses, smtp, sendgrid)
# ----------------------------------------------------------------------------
EMAIL_PROVIDER=mock
# AWS SES (if EMAIL_PROVIDER=ses)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@example.org
# SMTP (if EMAIL_PROVIDER=smtp)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@example.org
# SendGrid (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@example.org

# ----------------------------------------------------------------------------
# SMS Provider (mock, twilio)
# ----------------------------------------------------------------------------
SMS_PROVIDER=mock
# Twilio (if SMS_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ----------------------------------------------------------------------------
# WhatsApp Business API
# ----------------------------------------------------------------------------
WHATSAPP_PROVIDER=mock
WHATSAPP_FROM_NUMBER=

# ----------------------------------------------------------------------------
# OCR Configuration
# ----------------------------------------------------------------------------
TESSERACT_CMD=/usr/bin/tesseract
PADDLE_OCR_ENABLED=true
PADDLE_OCR_LANG=en
PADDLE_OCR_USE_GPU=false

# ----------------------------------------------------------------------------
# Object Storage (S3 or MinIO)
# ----------------------------------------------------------------------------
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=election-artifacts

# ----------------------------------------------------------------------------
# AI Services (Optional)
# ----------------------------------------------------------------------------
GEMINI_API_KEY=
OPENROUTER_API_KEY=

# ----------------------------------------------------------------------------
# Secrets Management (Optional)
# ----------------------------------------------------------------------------
VAULT_ADDR=
VAULT_TOKEN=

# ----------------------------------------------------------------------------
# Authentication (Optional OIDC)
# ----------------------------------------------------------------------------
AUTH_OIDC_ISSUER=
AUTH_OIDC_CLIENT_ID=
AUTH_OIDC_CLIENT_SECRET=

# ----------------------------------------------------------------------------
# WebAuthn (Optional)
# ----------------------------------------------------------------------------
WEBAUTHN_RP_ID=
WEBAUTHN_RP_NAME=Electoral Observation Group

# ----------------------------------------------------------------------------
# Maps (Optional)
# ----------------------------------------------------------------------------
MAPBOX_TOKEN=
LEAFLET_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# ----------------------------------------------------------------------------
# Frontend Apps
# ----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ----------------------------------------------------------------------------
# CORS Configuration
# ----------------------------------------------------------------------------
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=text
